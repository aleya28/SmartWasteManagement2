<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/orange_gradient"
        app:title="Terms and Conditions"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Last Updated -->
            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Updated: May 11, 2025"
                android:textStyle="italic"
                android:textColor="#666666"
                android:gravity="end"
                android:layout_marginBottom="16dp"/>

            <!-- Introduction Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Introduction"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Smart Waste Management. By downloading, accessing or using our mobile application, you agree to be bound by these Terms and Conditions. If you disagree with any part of these terms, you do not have permission to access or use our services."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Definitions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Definitions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 'App' refers to Smart Waste Management mobile application.\n• 'Services' refers to the features and functionalities provided through the App.\n• 'User', 'You', and 'Your' refers to the individual accessing or using the App.\n• 'We', 'Us', and 'Our' refers to Smart Waste Management and its operators."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- User Accounts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. User Accounts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When you create an account with us, you must provide information that is accurate, complete, and current at all times. Failure to do so constitutes a breach of the Terms, which may result in immediate termination of your account.\n\nYou are responsible for safeguarding the password you use to access the App and for any activities or actions under your password. We encourage you to use a strong password (containing upper and lower case letters, numbers, and symbols) for your account."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Use of Service Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Use of Service"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You agree not to use the App:\n\n• In any way that violates any applicable national or international law or regulation.\n• To transmit, or procure the sending of, any advertising or promotional material, including any 'junk mail', 'chain letter', 'spam', or any other similar solicitation.\n• To impersonate or attempt to impersonate the Company, a Company employee, another user, or any other person or entity.\n• In any way that could disable, overburden, damage, or impair the site or interfere with any other party's use of the App."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Privacy Policy Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Privacy Policy"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please review our Privacy Policy, which also governs your use of the App, to understand our data collection and usage practices."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Changes to Terms Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Changes to Terms"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We reserve the right, at our sole discretion, to modify or replace these Terms at any time. We will provide notice of any changes by posting the new Terms on the App. Your continued use of the App after any such changes constitutes your acceptance of the new Terms."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Contact Us Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Contact Us"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you have any questions about these Terms, please contact us at:\nsupport@smartwaste.com\nPhone: +123-456-7890"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
