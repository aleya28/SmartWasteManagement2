<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/orange_gradient"
        app:title="Privacy Policy"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Last Updated -->
            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Updated: May 11, 2025"
                android:textStyle="italic"
                android:textColor="#666666"
                android:gravity="end"
                android:layout_marginBottom="16dp"/>

            <!-- Introduction Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Introduction"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smart Waste Management respects your privacy and is committed to protecting your personal data. This Privacy Policy explains how we collect, use, and safeguard your information when you use our mobile application."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Information We Collect Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Information We Collect"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We collect the following types of information:\n\n• Personal Information: Name, email address, password, and profile details provided during registration.\n• Location Data: With your permission, we collect your device's location to show nearby recycling centers.\n• Usage Data: Information about how you interact with our application, including features used and actions taken.\n• Device Information: Technical information about your device and internet connection."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- How We Use Your Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. How We Use Your Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We use your information to:\n\n• Provide, operate, and maintain our services\n• Improve and personalize your user experience\n• Send notifications related to your account and activities\n• Understand how users interact with our application\n• Protect against fraud and unauthorized access\n• Comply with legal obligations"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Data Sharing Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Data Sharing and Disclosure"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We may share your information with:\n\n• Service providers who perform services on our behalf\n• Partners in connection with waste management services\n• Law enforcement agencies when required by law\n• Business partners in the event of a merger, acquisition, or sale of assets\n\nWe do not sell your personal information to third parties."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Data Security Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Data Security"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We implement appropriate security measures to protect your personal information from unauthorized access, alteration, disclosure, or destruction. However, no method of transmission over the internet or electronic storage is 100% secure, and we cannot guarantee absolute security."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Your Rights Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Your Rights"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have the right to:\n\n• Access and receive a copy of your personal data\n• Rectify inaccurate or incomplete personal data\n• Request the deletion of your personal data\n• Restrict or object to the processing of your personal data\n• Withdraw your consent at any time\n\nTo exercise these rights, please contact us through the app or email."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Changes to Policy Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Changes to This Privacy Policy"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We may update our Privacy Policy from time to time. We will notify you of any changes by posting the new Privacy Policy on this page and updating the 'Last Updated' date."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Contact Us Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_box"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. Contact Us"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you have any questions about this Privacy Policy, please contact us at:\n\nEmail: privacy@smartwastemanagement.com\nPhone: +1 (555) 123-4567"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
